@charset "utf-8";
@import "normalize";

/* code highlighting */
<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>
.highlight {
  padding: 1em;
}

h1, h2, h3, h4 {
  font-family: Georgia, Times, "Times New Roman", serif;
}

body, p, article {
  font-family: Futura, "Trebuchet MS", Arial, sans-serif;
  font-size: 16px;
  line-height: 2em;
}

a:link {color: #BB5111; text-decoration: none; }
a:active {color: #BB5111; text-decoration: none; }
a:visited {color: #BB5111; text-decoration: none; }
a:hover {color: #BB5111; text-decoration: underline; }


a {
  h1 {text-decoration: none;}
}


/* base styles */

.center {
  margin-left: auto;
  margin-right: auto;
}

.container {
  max-width: 1000px;
  padding-left: 1em;
  padding-right: 1em;
  margin-left: auto;
  margin-right: auto;
}

.big-bee {
  display: block;
  margin-bottom: 4em;
}

header {
  h1 {
    text-align: center;
    font-size:5em;
  }
}

blockquote {
  font-size:2em;
}

.blog-list {
  article { margin-bottom: 4em;}
  h2 {
    font-size: 3em;
    margin-bottom: .5em;
    line-height: 1em;
  }
  p {
    margin-top: 0;
    font-size: 2em;
    line-height: 1em;
  }
}
